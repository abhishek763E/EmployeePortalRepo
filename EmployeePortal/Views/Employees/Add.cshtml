    <div class="mt-3">
        <label class="form-label">TotalSalary</label>
        <input type="text" class="form-control" asp-for="TotalSalary" />
    </div>
    <div class="mt-3">
        <label class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>
